<% layout('../layouts/mainlayout.ejs') -%>
<br />
<form action="/User/RegisterUser" method="POST">
    <div class="form-group row">
        <label for="username" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
            <input name="username" type="text" class="form-control w-50"
                value="<%= user.username ? user.username : '' %>">
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input name="email" type="text" class="form-control w-50" value="<%= user.email ? user.email : '' %>">
        </div>
    </div>
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input name="firstName" type="text" class="form-control w-50"
                value="<%= user.firstName ? user.firstName : '' %>">
        </div>
    </div>
    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input name="lastName" type="text" class="form-control w-50"
                value="<%= user.lastName ? user.lastName : '' %>">
        </div>
    </div>
    <div class="form-group row">
        <label for="streetAddress" class="col-sm-2 col-form-label">Street Address</label>
        <div class="col-sm-10">
            <input name="streetAddress" type="text" class="form-control w-50"
                value="<%= user.streetAddress ? user.streetAddress : '' %>">
        </div>
    </div>
    <div class="form-group row">
        <label for="phoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
        <div class="col-sm-10">
            <input name="phoneNumber" type="text" class="form-control w-50"
                value="<%= user.phoneNumber ? user.phoneNumber : '' %>">
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input name="password" type="password" class="form-control w-50" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="passwordConfirm" class="col-sm-2 col-form-label">Password Confirm</label>
        <div class="col-sm-10">
            <input name="passwordConfirm" type="password" class="form-control w-50">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
    </div>
</form>
<%= errorMessage %>