<% layout('../layouts/mainlayout.ejs') -%> <br />
<b>User Detail</b><br><br>

<form action="/User/Update" method="POST">
  <div class="form-group row">
    <label for="username" class="col-sm-2 col-form-label">Username: <%= user.username %></label>
    <div class="col-sm-10">
      <input name="username" type="hidden" class="form-control w-50" value=<%= user.username %> />
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input name="email" type="text" class="form-control w-50" value="<%= user.email ? user.email : '' %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
    <div class="col-sm-10">
      <input name="firstName" type="text" class="form-control w-50" value="<%= user.firstName ? user.firstName : '' %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
    <div class="col-sm-10">
      <input name="lastName" type="text" class="form-control w-50" value="<%= user.lastName ? user.lastName : '' %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="streetAddress" class="col-sm-2 col-form-label">Street Address</label>
    <div class="col-sm-10">
      <input name="streetAddress" type="text" class="form-control w-50"
        value="<%= user.streetAddress ? user.streetAddress : '' %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="phoneNumber" class="col-sm-2 col-form-label">Phone Number</label>
    <div class="col-sm-10">
      <input name="phoneNumber" type="text" class="form-control w-50"
        value="<%= user.phoneNumber ? user.phoneNumber : '' %>">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <input type="submit" class="btn btn-success" value="Submit" />
    </div>
  </div>
</form>
<%= errorMessage %>